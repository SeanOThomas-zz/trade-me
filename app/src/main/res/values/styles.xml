<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_divider</item>
    </style>

    <style name="GreyText">
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GreyText.BigTitle">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="GreyText.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GreyText.Subtitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GreyText.SmallValue">
        <item name="android:textSize">13.5sp</item>
    </style>

</resources>
